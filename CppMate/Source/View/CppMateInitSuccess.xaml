<Window x:Class="CppMate.Source.ToolWindows.CppMateInitSuccess"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CppMate.Source.ToolWindows"
             mc:Ignorable="d" 
             ResizeMode="NoResize"
             Height="180" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock TextWrapping="Wrap" Text="C++ Mate initialized successfully!" HorizontalAlignment="Center" Margin="10,20,0,0" Width="374" VerticalAlignment="Center" TextAlignment="Center" FontSize="14" FontFamily="Consolas"/>
            <TextBlock TextWrapping="Wrap" Text="Please note that the init window will show only on first start of the new project. After that the cppmate.ini configuration file will be created. If you wish to reset the configuration, please remove that file from the directory." HorizontalAlignment="Center" Margin="10" Width="374" Height="65" VerticalAlignment="Center" TextAlignment="Justify"/>
            <Button Width="100" Height="20" Content="Ok"></Button>
        </StackPanel>
    </Grid>
</Window>
